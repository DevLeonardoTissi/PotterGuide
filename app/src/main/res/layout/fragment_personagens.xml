<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo"
    tools:context=".ui.fragment.PersonagensFragment">


        <ProgressBar
            android:id="@+id/personagemFragment_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/personagemFragment_swipeRefresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/personagemFragment_imageView_falha"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/seminternet"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/personagemFragment_textView_falha"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/personagemFragment_textView_falha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin"
                    android:gravity="center"
                    android:paddingHorizontal="40dp"
                    android:text="@string/common_falhaCarregamento"
                    android:textColor="@color/Verde_principal"
                    android:textSize="@dimen/big_text_size"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/personagensFragment_button_falha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/personagemFragment_textView_falha"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    app:layout_constraintVertical_bias="0.5"
                    android:visibility="gone"
                    android:layout_margin="@dimen/big_margin"
                    android:text="@string/common_tentar_novamente"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:icon="@drawable/ic_refresh"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/personagemFragment_recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                  app:layout_constraintBottom_toTopOf="@id/personagemFragment_bottomNavigation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="10"
                    tools:listitem="@layout/personagem_item" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/personagemFragment_floatActionButtonRecyclerView_Scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/personagemFragment_floatActionButtonRecyclerView_Layout"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="@dimen/big_margin"
                    android:backgroundTint="@color/amarelo"
                    android:src="@drawable/ic_up"
                    app:borderWidth="0dp"
                    android:visibility="gone"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/personagemFragment_floatActionButtonRecyclerView_Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/personagemFragment_bottomNavigation"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="@dimen/big_margin"
                    android:backgroundTint="@color/amarelo"
                    android:src="@drawable/ic_grid"
                    app:borderWidth="0dp"
                   />



                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/personagemFragment_bottomNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/default_elevation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:menu="@menu/bottom_navigation_menu"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




<!--    app:itemIconTint="@color/Verde_principal"-->