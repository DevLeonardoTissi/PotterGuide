<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.DetalhesCasaActivity"
    android:background="@color/amarelo"
    >

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/detalhesCasaActivity_Toolbar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/amarelo"
        app:navigationIcon="@drawable/ic_back"
        android:elevation="0dp"
        />

    <ImageView
        android:id="@+id/DetalheCasaImagem"
        app:layout_constraintTop_toBottomOf="@id/detalhesCasaActivity_Toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/gryffindor"
        android:layout_marginTop="25dp"/>

    <TextView
        android:padding="8dp"
        android:id="@+id/DetalheCasaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DetalheCasaImagem"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/amarelo_escuro"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>